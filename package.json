{
  "name": "kanpeki",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/fellipeutaka/kanpeki.git"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "type-check": "turbo run type-check --parallel",
    "lint": "biome check --fix",
    "clean": "rimraf **/{.next,.turbo,node_modules,dist,out} -g",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.4.0",
    "@types/node": "^20.14.11",
    "commitizen": "^4.3.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.14",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.5.0",
  "lint-staged": {
    "*.{js,ts,tsx}": ["biome check --fix --no-errors-on-unmatched"],
    "*.{ts,tsx}": ["bash -c 'pnpm run type-check'"]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
