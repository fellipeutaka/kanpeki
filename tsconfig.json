{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "strict": true,

    "declaration": true,
    "declarationMap": true,

    "moduleResolution": "Bundler",
    "module": "esnext",
    "noEmit": true,

    "lib": ["es2022", "dom", "dom.iterable"]
  }
}
