---
import { DocsSidebarNav } from "~/components/docs-sidebar-nav";
import RootLayout from "./root.astro";
---

<RootLayout>
  <div class="border-b">
    <div
      class="container md:grid md:grid-cols-[220px_minmax(0,1fr)] md:gap-6 lg:grid-cols-[240px_minmax(0,1fr)] lg:gap-10"
    >
      <aside
        class="fixed top-14 z-30 -ml-2 hidden h-[calc(100dvh-3.5rem)] w-full shrink-0 md:sticky md:block"
      >
        <DocsSidebarNav url={Astro.url} client:load />
      </aside>
      <slot />
    </div>
  </div>
</RootLayout>
